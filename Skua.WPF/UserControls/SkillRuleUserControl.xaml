<UserControl
    x:Class="Skua.WPF.UserControls.SkillRuleUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Skua.WPF.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:Skua.Core.ViewModels;assembly=Skua.Core"
    xmlns:wpf="clr-namespace:Skua.WPF"
    xmlns:conv="clr-namespace:Skua.WPF.Converters"
    d:DataContext="{d:DesignInstance vms:SkillRulesViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox" />
        <conv:StringToIntConverter x:Key="StringToIntConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <CheckBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="Use Rule?"
            IsChecked="{Binding UseRuleBool, UpdateSourceTrigger=PropertyChanged}"
            ToolTip="Whether to use the specified rule values when adding a skill." />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Command="{Binding ResetUseRulesCommand}"
            Content="Reset"
            Style="{StaticResource MaterialDesignPaperButton}" />
        <ToggleButton
            Grid.Row="1"
            Grid.Column="0"
            Height="auto"
            Margin="0,3"
            IsChecked="{Binding HealthGreaterThanBool, UpdateSourceTrigger=PropertyChanged}">
            <ToggleButton.Style>
                <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="ToggleButton">
                    <Setter Property="Content" Value="{materialDesign:PackIcon Kind=GreaterThanOrEqual}" />
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Content" Value="{materialDesign:PackIcon Kind=LessThanOrEqual}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Margin="0,0,3,0"
                materialDesign:HintAssist.Hint="Health"
                Text="{Binding HealthUseValue, UpdateSourceTrigger=PropertyChanged}">
                <b:Interaction.Behaviors>
                    <wpf:TextBoxOnlyNumbersBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <ToggleButton
                Grid.Column="1"
                Margin="0,0,3,0"
                IsChecked="{Binding HealthIsPercentage, UpdateSourceTrigger=PropertyChanged}">
                <ToggleButton.Style>
                    <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="ToggleButton">
                        <Setter Property="Content" Value="%" />
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Content" Value="#" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </Grid>

        <ToggleButton
            Grid.Row="2"
            Grid.Column="0"
            Height="auto"
            Margin="0,3"
            IsChecked="{Binding ManaGreaterThanBool, UpdateSourceTrigger=PropertyChanged}">
            <ToggleButton.Style>
                <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="ToggleButton">
                    <Setter Property="Content" Value="{materialDesign:PackIcon Kind=GreaterThanOrEqual}" />
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Content" Value="{materialDesign:PackIcon Kind=LessThanOrEqual}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Margin="0,0,3,0"
                materialDesign:HintAssist.Hint="Mana"
                Text="{Binding ManaUseValue, UpdateSourceTrigger=PropertyChanged}">
                <b:Interaction.Behaviors>
                    <wpf:TextBoxOnlyNumbersBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <ToggleButton
                Grid.Column="1"
                Margin="0,0,3,0"
                IsChecked="{Binding ManaIsPercentage, UpdateSourceTrigger=PropertyChanged}">
                <ToggleButton.Style>
                    <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="ToggleButton">
                        <Setter Property="Content" Value="%" />
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Content" Value="#" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </Grid>

        <ToggleButton
            Grid.Row="3"
            Grid.Column="0"
            Height="auto"
            Margin="0,3"
            IsChecked="{Binding PartyMemberHealthGreaterThanBool, UpdateSourceTrigger=PropertyChanged}">
            <ToggleButton.Style>
                <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="ToggleButton">
                    <Setter Property="Content" Value="{materialDesign:PackIcon Kind=GreaterThanOrEqual}" />
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Content" Value="{materialDesign:PackIcon Kind=LessThanOrEqual}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
        <Grid
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Margin="0,0,3,0"
                materialDesign:HintAssist.Hint="Party Member HP (any player)"
                Text="{Binding PartyMemberHealthUseValue, UpdateSourceTrigger=PropertyChanged}">
                <b:Interaction.Behaviors>
                    <wpf:TextBoxOnlyNumbersBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <ToggleButton
                Grid.Column="1"
                Margin="0,0,3,0"
                IsChecked="{Binding PartyMemberHealthIsPercentage, UpdateSourceTrigger=PropertyChanged}">
                <ToggleButton.Style>
                    <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="ToggleButton">
                        <Setter Property="Content" Value="%" />
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Content" Value="#" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </Grid>

        <ToggleButton
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,3"
            IsChecked="{Binding AuraGreaterThanBool, UpdateSourceTrigger=PropertyChanged}">
            <ToggleButton.Style>
                <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="ToggleButton">
                    <Setter Property="Content" Value="{materialDesign:PackIcon Kind=GreaterThanOrEqual}" />
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Content" Value="{materialDesign:PackIcon Kind=LessThanOrEqual}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
        <Grid
            Grid.Row="4"
            Margin="0,0,3,0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                materialDesign:HintAssist.Hint="Aura Name"
                Text="{Binding AuraName, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Column="1"
                materialDesign:HintAssist.Hint="Aura Stacks"
                Margin="3,0,3,0"
                Text="{Binding AuraUseValue, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToIntConverter}}">
                <b:Interaction.Behaviors>
                    <wpf:TextBoxOnlyNumbersBehavior />
                </b:Interaction.Behaviors>
            </TextBox>
            <ComboBox
                Grid.Column="2"
                SelectedIndex="{Binding AuraTargetIndex, UpdateSourceTrigger=PropertyChanged}" Height="38">
                <ComboBoxItem Content="Self" />
                <ComboBoxItem Content="Target" />
            </ComboBox>
        </Grid>
        <Grid
            Grid.Column="1"
            Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,3"
                materialDesign:HintAssist.Hint="Wait (ms)"
                Text="{Binding WaitUseValue, UpdateSourceTrigger=PropertyChanged}" />

            <CheckBox
                Grid.Row="0"
                Grid.Column="0"
                Content="Skip if not available."
                IsChecked="{Binding SkipUseBool, UpdateSourceTrigger=PropertyChanged}">
                <CheckBox.ToolTip>
                    <TextBlock>
                        Will skip skill if it is not available.<LineBreak />
                        Note: If the skill has a Wait Use Rule, it will wait for the specified time and then check if it should be skipped.</TextBlock>
                </CheckBox.ToolTip>
            </CheckBox>
        </Grid>
    </Grid>
</UserControl>

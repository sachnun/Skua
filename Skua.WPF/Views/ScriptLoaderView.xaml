<UserControl
    x:Class="Skua.WPF.Views.ScriptLoaderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:Skua.Core.ViewModels;assembly=Skua.Core"
    d:DataContext="{d:DesignInstance vms:ScriptLoaderViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="350"
    mc:Ignorable="d">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!-- Script Name -->
        <TextBlock Grid.Row="0"
                   Text="{Binding LoadedScript, FallbackValue='No script loaded'}"
                   HorizontalAlignment="Center"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,6"
                   TextTrimming="CharacterEllipsis"
                   ToolTip="{Binding ScriptErrorToolTip}" />
        
        <!-- Buttons -->
        <Grid Grid.Row="1" Margin="0,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Grid.Column="0"
                    Margin="0,0,3,3"
                    Command="{Binding OpenScriptRepoCommand}"
                    Content="Search Scripts" />
            <Button Grid.Row="0" Grid.Column="1"
                    Margin="3,0,0,3"
                    Command="{Binding EditScriptConfigCommand}"
                    Content="Options"
                    IsEnabled="{Binding ToggleScriptEnabled}" />
            
            <!-- Toggle Button with color and label change -->
            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Margin="0,3,0,0"
                    Command="{Binding ToggleScriptCommand}"
                    IsEnabled="{Binding ToggleScriptEnabled}">
                <Button.Style>
                    <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                        <Setter Property="Content" Value="Start" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ScriptManager.ScriptRunning}" Value="True">
                                <Setter Property="Background" Value="#4CAF50" />
                                <Setter Property="Content" Value="Stop" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        
        <!-- Logs -->
        <ContentPresenter Grid.Row="2"
                          Margin="0,3"
                          Content="{Binding ScriptLogs}" />
    </Grid>
</UserControl>
